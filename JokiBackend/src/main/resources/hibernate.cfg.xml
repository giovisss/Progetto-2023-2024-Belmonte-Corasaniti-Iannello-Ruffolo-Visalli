<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-configuration SYSTEM
    "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="hibernate.dialect">org.hibernate.dialect.PostgreSQLDialect</property>
        <property name="hibernate.connection.driver_class">org.postgresql.Driver</property>
        <property name="hibernate.connection.url">jdbc:postgresql://localhost:5432/jokidb</property>
        <property name="hibernate.connection.username">jokiuser</property>
        <property name="hibernate.connection.password">jokiuser</property>
        <property name="hibernate.show_sql">true</property>
        <property name="hibernate.hbm2ddl.auto">create-drop</property>
        <mapping class="unical.enterprise.jokibackend.Data.Entities.Admin" />
        <mapping class="unical.enterprise.jokibackend.Data.Entities.Game" />
        <mapping class="unical.enterprise.jokibackend.Data.Entities.Order" />
        <mapping class="unical.enterprise.jokibackend.Data.Entities.User" />
        <mapping class="unical.enterprise.jokibackend.Data.Entities.Wishlist" />
    </session-factory>
</hibernate-configuration>
